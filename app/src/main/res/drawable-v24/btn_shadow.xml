<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape = "rectangle">
            <solid android:color="@color/off_white"></solid>
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00000000"
                android:centerX="0.9"
                android:endColor="#04000000"
                android:startColor="#00000000" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00000000"
                android:centerX="0.9"
                android:endColor="#09000000"
                android:startColor="#00000000" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00000000"
                android:centerY="0.1"
                android:endColor="#00000000"
                android:startColor="#12000000" />
        </shape>
    </item>
</layer-list>